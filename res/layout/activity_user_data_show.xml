<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
	>

    <TextView
        android:id="@+id/textview_show_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
		android:layout_centerHorizontal="true"
        android:text="Default User"
		android:textSize="30dp"
		android:textStyle="bold|italic"
	 />

    <TextView
        android:id="@+id/textview_show_user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textview_show_username"
        android:layout_below="@id/textview_show_username"
        android:layout_marginTop="60dp"
        android:text="Default Age"
        android:textSize="30dp"
        android:textStyle="bold|italic" />
	
    <Button
        android:id="@+id/button_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get back to work"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textview_show_user_age"
        android:textSize="30dp"
        android:textStyle="bold" />
</RelativeLayout>
