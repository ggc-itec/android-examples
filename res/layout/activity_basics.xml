<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BasicsActivity" >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/pipboy" 
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaff0000"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textColor="#aa00ff00"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#aaff00aa"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="How are you feeling?"
        android:textColor="#aa000000"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Good"
            android:textColor="#aa00ff00"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bad"
            android:textColor="#aa00ff00"
            android:textSize="30dp"
            android:textStyle="bold|italic" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#aaaa00ff"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="Go ahead and type something good"
        android:textColor="#aa000000"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Smiling or not?"
        android:inputType="textPassword"
        android:textColor="#aa00ff00"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#aaff0000"
        android:gravity="center"
        android:text="Always SMILE!"
        android:textColor="#aa00ff00"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>