<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ServiceActivity" >

    <ImageView
        android:id="@+id/service_imageview"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pipboy" />

    <TextView
        android:id="@+id/service_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_imageview"
        android:gravity="center"
        android:text="Counting?"
        android:textColor="#aa00ff00"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/service_count_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_label"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text=""
        android:textColor="#aaff0000"
        android:textSize="30dp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/service_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_count_textview"
        android:layout_centerHorizontal="true"
        android:text="Start Service" />

    <Button
        android:id="@+id/service_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_start_button"
        android:layout_centerHorizontal="true"
        android:text="Stop Service" />

</RelativeLayout>